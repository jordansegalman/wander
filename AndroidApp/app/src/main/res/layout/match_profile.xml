<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/button_layer"
        android:gravity="top"
        android:orientation="vertical">
        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/picture"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:contentDescription="Profile Picture"
            android:src="@drawable/default_profile"
            app:civ_border_color="	#D3D3D3"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:inputType="none"
            android:text="No Name"
            android:textColor="#000000"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/interests"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:text="Interests:"
            android:textColor="#000000"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/interests_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:text="No Interests"
            android:textColor="#606060"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About Me:"
            android:textColor="#000000"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/about_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:text="No About"
            android:textColor="#606060"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/crossed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Times Crossed:"
            android:textColor="#000000"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/crossed_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:text="1"
            android:textColor="#606060"
            android:textSize="14sp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/button_layer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0">

            <Button
                android:id="@+id/approveButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_weight="0"
                android:backgroundTint="@color/colorAccent"
                android:onClick="approve"
                android:text="Approve" />

            <Button
                android:id="@+id/crossedPathsButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_weight="0"
                android:backgroundTint="@color/colorAccent"
                android:onClick="crossed"
                android:text="View Crossed Paths" />

        </LinearLayout>



    </LinearLayout>

</RelativeLayout>
