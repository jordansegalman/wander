<?xml version="1.0" encoding="utf-8"?>
<LinearLayout app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
    android:id="@+id/fragment_history_menu_bottom"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/review_container"
        android:layout_width="match_parent"
        android:layout_height="132dp">

        <ImageView
            android:id="@+id/location_image"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="10dp"
            android:src="@drawable/tag_location_3"/>

        <EditText
            android:id="@+id/tag_title"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_alignTop="@+id/location_image"
            android:layout_marginRight="10dp"
            android:layout_toEndOf="@+id/location_image"
            android:text="Enter a Tag Location"
            android:textSize="15sp"
            android:textStyle="bold"
            android:inputType="none"
            android:background="@android:color/transparent"/>

        <EditText
            android:id="@+id/tag_review"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tag_title"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:gravity="top"
            android:layout_toRightOf="@+id/location_image"
            android:text="Enter a review or description of the location."
            android:textSize="15sp"
            android:inputType="none"
            android:background="@android:color/transparent"/>

    </RelativeLayout>
    
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <Button
            android:id="@+id/edit_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Edit Review"/>
        <Button
            android:id="@+id/delete_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/edit_button"
            android:text="Delete Review"/>
    </RelativeLayout>

</LinearLayout>